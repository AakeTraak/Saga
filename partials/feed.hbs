<section id="feed" class="feed grid">
    {{#foreach posts limit="10"}}
        <article class="{{post_class}}{{#if feature_image}} has-image{{/if}}"{{#if feature_image}} style="background-image: url({{img_url feature_image}})">{{/if}}
            <section class="post--content">
                <section class="post--top-content">
                    {{#if tags}}
                        <span class="post--tags"> {{tags class="tag" prefix="" separator=" "}}</span>
                    {{/if}}
                    <h2 class="post--title"><a href="{{url}}">{{{title}}}</a></h2>
                    <p class="post--excerpt">{{excerpt words=25}}â€¦</p>
                    <span class="date">Posted <a href="{{url}}"><time class="timesince" data-timesince="{{date format='X'}}" datetime="{{date format='YYYY-MM-DDTHH:mm'}}" title="{{date format='D MMMM YYYY'}}">{{date published_at timeago='true'}}</time></a></span>{{#author}} by <span class="author"><a href="{{url}}">{{name}}</a></span>{{/author}}
                </section>
                <section class="post--bottom-content">
                </section>
            </section>

        </article>
    {{~/foreach}}
</section>
{{pagination}}