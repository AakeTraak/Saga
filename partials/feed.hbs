<section id="feed" class="feed grid fadeIn animated">
    {{#foreach posts limit="10"}}
        <article class="{{post_class}}{{#if feature_image}} has-image{{/if}}"{{#if feature_image}} style="background-image: url({{img_url feature_image}}){{/if}}">
            <section class="post--top-content">
                {{#if tags}}
                    <span class="post--tags"> {{tags class="tag" prefix="" separator=" "}}</span>
                {{/if}}
                <h2 class="post--title"><a href="{{url}}">{{{title}}}</a></h2>
                <p class="post--excerpt">{{excerpt words=25}}â€¦</p>
                <p class="post--read-time">{{reading_time}}</p>
            </section>
            <section class="post--bottom-content">
                    <span class="post--meta">
                        <span class="date">Posted{{#author}} by <span class="author"><a href="{{url}}">{{name}}</a></span>{{/author}} about <a href="{{url}}"><time class="timesince" datetime="{{date format='YYYY-MM-DDTHH:mm'}}" title="{{date format='YYYY-MM-DD HH:mm'}}">{{date published_at timeago='true'}}</time></a></span>
                    </span>
                </section>
        </article>
    {{~/foreach}}
</section>
{{pagination}}